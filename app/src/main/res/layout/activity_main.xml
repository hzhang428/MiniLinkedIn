<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"

        tools:context="com.example.haozhang.minilinkedin.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/user_name_layout"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/caption_text_size"
                    android:text="@string/example_name"/>

                <ImageButton
                    android:id="@+id/edit_basic_info"
                    android:layout_width="@dimen/icon_button_size"
                    android:layout_height="@dimen/icon_button_size"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:src="@drawable/ic_mode_edit_black_18px"
                    android:background="?attr/selectableItemBackground"/>

            </LinearLayout>

            <TextView
                android:id="@+id/email"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/image"
                android:layout_below="@id/user_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_email"/>

            <ImageButton
                android:id="@+id/image"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/user_picture_size"
                android:layout_height="@dimen/user_picture_size"
                android:src="@drawable/ic_account_circle_black_48px"
                android:background="?attr/selectableItemBackground" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_small">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/caption_text_size"
                android:textAllCaps="true"
                android:text="@string/section_education"/>

            <ImageButton
                android:id="@+id/add_education_btn"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:layout_marginRight="@dimen/spacing_medium"
                android:src="@drawable/ic_add_box_black_24px"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/education_school"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/example_school"/>

            <ImageButton
                android:id="@+id/edit_school_btn"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:layout_marginRight="@dimen/spacing_medium"
                android:src="@drawable/ic_mode_edit_black_18px"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

        <TextView
            android:id="@+id/education_courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Database\n- Algorithm\n- Network"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_small">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/caption_text_size"
                android:textAllCaps="true"
                android:text="@string/section_experience"/>

            <ImageButton
                android:id="@+id/add_experience_btn"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:layout_marginRight="@dimen/spacing_medium"
                android:src="@drawable/ic_add_box_black_24px"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/experience_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/example_experience"/>

            <ImageButton
                android:id="@+id/edit_experience_detail_btn"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:layout_marginRight="@dimen/spacing_medium"
                android:src="@drawable/ic_mode_edit_black_18px"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

        <TextView
            android:id="@+id/experience_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Web Application Development\n- Cassandra\n- Splunk"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_small">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/caption_text_size"
                android:textAllCaps="true"
                android:text="@string/section_projects"/>

            <ImageButton
                android:id="@+id/add_projects_btn"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:layout_marginRight="@dimen/spacing_medium"
                android:src="@drawable/ic_add_box_black_24px"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/project_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/example_project"/>

            <ImageButton
                android:id="@+id/edit_project_btn"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:layout_marginRight="@dimen/spacing_medium"
                android:src="@drawable/ic_mode_edit_black_18px"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

        <TextView
            android:id="@+id/project_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- UI design\n- Implement local storage\n- Multi-Language support"/>

    </LinearLayout>
</ScrollView>
